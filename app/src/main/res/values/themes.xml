<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Evaluacioncontinuav3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryDark">@color/red_600</item>
        <item name="colorPrimaryVariant">@color/red_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_800</item>
        <item name="colorSecondaryVariant">@color/red_900</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/red_400</item>
    </style>

    <style name="notificationSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notification</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/red_400</item>
    </style>

    <style name="Widget.Carshop.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/red_500</item>
        <item name="android:theme">@style/Theme.Evaluacioncontinuav3</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.Carshop.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.CarShop.TextInputLayout.HintText</item>
        <item name="hintTextColor">?attr/colorSecondary</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="TextAppearance.CarShop.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
    <style name="TextAppearance.CarShop.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="Widget.Carshop.Backdrop" parent="">
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Widget.Carshop.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
</resources>